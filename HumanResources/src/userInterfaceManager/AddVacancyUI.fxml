<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="userInterfaceManager.AddVacancyUI">
   <center>
      <VBox prefHeight="400.0" prefWidth="400.0">
         <children>
            <Label fx:id="wrongTypeLabel" text="Избери вид на позиция!" textFill="#ee0303">
               <VBox.margin>
                  <Insets bottom="-50.0" left="210.0" top="60.0" />
               </VBox.margin>
            </Label>
            <ComboBox fx:id="typeCombo" prefWidth="200.0">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </ComboBox>
            <Label fx:id="wrongJobTitleLabel" text="Избери специализация!" textFill="#ee0303">
               <VBox.margin>
                  <Insets bottom="-40.0" left="210.0" top="45.0" />
               </VBox.margin>
            </Label>
            <ComboBox fx:id="jobTitleCombo" prefWidth="200.0">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </ComboBox>
            <Label fx:id="wrongCountLabel" text="Избери брой места!" textFill="#ee0303">
               <VBox.margin>
                  <Insets bottom="-40.0" left="80.0" top="45.0" />
               </VBox.margin>
            </Label>
            <ComboBox fx:id="countCombo" prefWidth="70.0">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </ComboBox>
            <TextArea fx:id="description" prefHeight="200.0" prefWidth="300.0" wrapText="true">
               <VBox.margin>
                  <Insets bottom="45.0" right="100.0" top="40.0" />
               </VBox.margin>
            </TextArea>
         </children>
      </VBox>
   </center>
   <left>
      <VBox prefHeight="400.0" prefWidth="178.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Вид на позиция:">
               <VBox.margin>
                  <Insets left="30.0" top="60.0" />
               </VBox.margin>
            </Label>
            <Label text="Специализация:">
               <VBox.margin>
                  <Insets left="30.0" top="50.0" />
               </VBox.margin>
            </Label>
            <Label text="Брой места:">
               <VBox.margin>
                  <Insets left="30.0" top="50.0" />
               </VBox.margin>
            </Label>
            <Label text="Описание:">
               <VBox.margin>
                  <Insets left="30.0" top="50.0" />
               </VBox.margin>
            </Label>
            <Button mnemonicParsing="false" onAction="#addVacancy" text="Добави">
               <VBox.margin>
                  <Insets left="30.0" top="50.0" />
               </VBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets left="70.0" />
         </BorderPane.margin>
      </VBox>
   </left>
</BorderPane>
